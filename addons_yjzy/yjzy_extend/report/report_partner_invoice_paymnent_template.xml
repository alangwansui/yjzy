<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_partner_invoice_payment_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':user.lang})"/>
           <style>
	  body{
		    font-size:10px;
		  font-family:"Arial";
	  }
	.title{
		height: 30px;
	    text-align: center;}
	.main{
		width: 100%;
	    font-size: 10px ; }
		.main td{height:20px}
	.tablelist{
		text-align: left;
        border: 0.8px solid;
		border-collapse: collapse;
		font-size: 10px;
		width: 100%;
		vertical-align: middle
	}
	.tablelist th{
		font-size: 10px;
		text-align: center;
	    border: 0.8px solid;
		height: 20px;
		line-height: 20px;
		border-collapse: collapse;
		vertical-align: middle;
		font-weight: 200;
		padding: 2px;
	}
	.tablelist td{
		 border: 0.8px solid;
		height: 20px;
		line-height: 20px;
		vertical-align: middle;
		padding-left: 2px;
		padding-right: 5px;
		border-collapse: collapse;
	}
	.buttom{
		margin-top: 5px;
		border-top: 1px solid;

	}
	.buttom th{
		padding-top: 10px;
        font-size: 16px;
		font-weight: bolder;

	}
    .buttom td{

		padding: 5px;
		font-size: 12px;
		vertical-align: middle;
		border-collapse: collapse;

	}
	.buttom_bank{
		font-size: 12px;
	}
	.buttom_bank2{
		padding: 5px;
		font-size: 12px;
			vertical-align: middle;
		border-collapse: collapse;
	}

