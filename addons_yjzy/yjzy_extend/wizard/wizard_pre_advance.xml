<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="wizard_pre_advance_form" model="ir.ui.view">
            <field name="name">wizard.pre.advance.form</field>
            <field name="model">wizard.pre.advance</field>
            <field name="arch" type="xml">
                <form string="选择预收预付明细">
                    <group><group>
                        <field name="pre_advance_line" invisible="1"/>
                        <field name="payment_advance_id" invisible="1"/>
                        <field name="is_selected" readonly="1"/>
                    </group>
                    </group>
                    <footer>
                        <button name="apply" class="oe_highlight" type='object' string="选中" attrs="{'invisible':[('is_selected','=',False)]}"/>
                        <button name="cancel" class="oe_highlight" type='object' string="取消选择" attrs="{'invisible':[('is_selected','=',True)]}"/>
                        <button special="cancel" class="oe_highlight" string="取消"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>

