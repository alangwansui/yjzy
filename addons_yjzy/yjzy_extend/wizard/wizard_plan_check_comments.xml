<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_plan_check_form" model="ir.ui.view">
            <field name="name">wizard.plan.check.comments.form</field>
            <field name="model">wizard.plan.check.comments</field>
            <field name="arch" type="xml">
                <form string="日志每注">
                    <group>
                        <field name="order_track_id" readonly="1" invisible="1"/>
                        <field name="type" invisible="1"/>
                        <field name="comments" />

                    </group>

                    <footer>
                        <button name="apply" class="oe_highlight" type='object' string="确认"/>
                        <button special="cancel" class="oe_highlight" string="取消"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>