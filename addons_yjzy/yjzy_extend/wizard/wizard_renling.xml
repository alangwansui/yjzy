<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_renling_form" model="ir.ui.view">
            <field name="name">wizard.renling.from</field>
            <field name="model">wizard.renling</field>
            <field name="arch" type="xml">
                <form string="创建发运单">
                    <group>
                        <field name="renling_type"/>
                        <field name="partner_id" groups="base.group_system"/>
                        <field name="so_id" />
                        <field name="btd_id" />
                    </group>
                    <group>
                        <field name="invoice_ids" nolabel="1" domain="[('partner_id','=',partner_id),('state','=','open'),('type','in',['out_invoice'])]"
                               context="{'tree_view_ref':'yjzy_extend.invoice_new_hxd_tree'}"
                               options="{'no_create': True,'no_open':True}"/>
                        <field name="sale_other_invoice_ids" invisible="1"/>
                    </group>
                    <footer>
                        <button name="create_yshxd_ysrl" class="oe_highlight" type='object' string="确认" />
                        <button special="cancel" class="oe_highlight" string="取消"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--
              <act_window id="act_wizard_transport4so"
