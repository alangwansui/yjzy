<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_plan_invoice_auto_tree">
        <field name="name">plan.invoice.auto.tree</field>
        <field name="model">plan.invoice.auto</field>
        <field name="priority" eval="999"/>
        <field name="arch" type="xml">
            <tree string="应收发票">
                <field name="name"/>

                <field name="bill_id"/>
                <field name="real_invoice_auto_id"/>

            </tree>
        </field>
    </record>

    <record id="view_plan_invoice_auto_form" model="ir.ui.view">
        <field name="name">plan.invoice.auto.form</field>
        <field name="model">plan.invoice.auto</field>
        <field name="arch" type="xml">
            <form string="应收发票">
                <header>
                    <button name="compute_hs_name_all_ids" type="object" string="计算报关明细"/>
                    <field name="state" widget="statusbar" statusbar_visible=" "/>

                </header>

                <sheet>

                    <div class="oe_title" invisible="1">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>

                        <field name="bill_id"/>

                    </group>
                     <field name="real_invoice_auto_id"/>
                    <field name="invoice_ids"/>
                    <notebook>
                        <page>
                            <field name="hsname_all_ids">
                                <tree editable="bottom">
                                        <field name="hs_id"/>

                                        <field name="back_tax"
                                        />
                                        <field name="amount2" readonly="1"
                                        />
                                        <field name="purchase_amount2_tax" readonly="1" sum="小计"
                                        />
                                        <field name="purchase_amount2_no_tax" readonly="1" sum="小计"
                                        />
                                        <field name="purchase_back_tax_amount2_new" readonly="1" string="实际退税金额"
                                               sum="小计"/>
                                        <field name="purchase_amount_min_add_forecast" readonly="1" sum="小计"
                                        />
                                        <field name="purchase_amount_max_add_forecast" readonly="1" sum="小计"
                                        />
                                        <field name="purchase_amount2_add_actual" readonly="1" sum="小计"
                                        />
                                    <field name="plan_invoice_auto_total" readonly="1" sum="小计"
                                        />

                                        <field name="purchase_amount_min_add_rest" readonly="1"
                                        />
                                        <field name="purchase_amount_max_add_rest" readonly="1"
                                        />
                                        <field name="purchase_amount2_add_this_time"
                                        />

                                    </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>




    <record model="ir.actions.act_window" id="action_plan_invoice_auto">
        <field name="name">应收发票</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">plan.invoice.auto</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
         <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_plan_invoice_auto_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_plan_invoice_auto_form')})]"/>
    </record>



    <menuitem id="menu_plan_invoice_auto" sequence="0" name="应收发票" parent="menu_real_invoice" action="action_plan_invoice_auto"/>


</odoo>