<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_ysrld_tree">
        <field name="name">account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="priority" eval="999"/>
        <field name="arch" type="xml">
            <tree string="预收认领单" decoration-info="state == 'draft'"
                  decoration-muted="state in ['reconciled', 'cancelled']" edit="false">
                <field name="name"/>
                <field name="yjzy_payment_id" string="收款单" context="{'bank_amount':1}"/>
                <field name="payment_date" string="认领日期"/>
                <field name="partner_id"/>
                <field name="so_id" string="销售合同"/>
                <field name="amount" string="收款预收金额"/>
                <field name="advance_balance_total" string="未被认领金额"/>
                <field name="fault_comments"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

        <!--预收认领明细-->
    <record model="ir.ui.view" id="account_ysrld_line_tree_view">
        <field name="name">account.reconcile.order.line.tree</field>
        <field name="model">account.reconcile.order.line</field>
        <field name="arch" type="xml">
            <tree string="认领明细"  edit="false" create="false">
                <field name="so_id"/>
                <field name="tb_contract_code"/>
                <field name="invoice_id" groups="base.group_system"/>
                <field name="advance_residual" string="销售合同预收余额"/>
                <field name="invoice_currency_id" invisible="1"/>
                <field name="payment_currency_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="yjzy_currency_id" invisible="1"/>
                <field name="amount_advance_org" string="预收认领金额" sum="小计"/>

            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_ysrld_reconcile_tree">
        <field name="name">account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="priority" eval="999"/>
        <field name="arch" type="xml">
            <tree string="预收认领单" edit="false" create="false">
                <field name="partner_id"/>
                <field name="name" invisible="1"/>
                <field name="rcskd_amount"/>
                <field name="rcskd_date"/>
                <field name="payment_date" string="认领日期"/>
                <field name="amount" string="认领金额"/>
                <field name="advance_reconcile_order_line_invoice_char" string="账单"/>
                <field name="so_id" string="销售合同"/>
                <field name="advance_reconcile_order_line_ids" invisible="1"/>
                <field name="advance_reconcile_order_line_date_char"/>
                <field name="advance_reconcile_order_line_amount_char"/>
                <field name="fault_comments"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

        <record model="ir.ui.view" id="view_ysrld_reconcile_tree_1">
        <field name="name">account.payment.tree</field>
        <field name="model">account.payment</field>
        <field name="priority" eval="999"/>
        <field name="arch" type="xml">
            <tree string="预收认领单" edit="false" create="false" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                <field name="partner_id"/>
                <field name="name" invisible="1"/>
                <field name="rcskd_date"/>
                <field name="rcskd_amount"/>
                <field name="payment_date" string="认领日期"/>
                <field name="amount" string="金额"/>
                <button name="open_reconcile_order_line" icon="fa-pencil-square-o" type="object"/>
                <field name="advance_balance_total" string="未认领金额"/>
                <field name="advance_total" string="已认领金额"/>
                <field name="so_id" string="销售合同"/>
                <field name="fault_comments"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_ysrld_advance_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="arch" type="xml">
            <form string="预收认领单">

                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,reconciled,cancelled"/>
                    <field name="is_editable" widget="boolean_toggle" groups="sales_team.group_manager"/>
                </header>
                <sheet>


                    <field name="id" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>


                            <field name="partner_id" options="{'no_create':True,'no_open': True}"
                                   domain="[('is_company','=',True),('customer','=',True)]"
                                   attrs="{'required': [('payment_type', 'in', ('inbound', 'outbound'))], 'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))], 'readonly': [('state', '!=', 'draft')]}"
                                   context="{'default_is_company': True, 'default_supplier': payment_type == 'outbound', 'default_customer': payment_type == 'inbound'}"/>
                            <field name="yjzy_payment_id" string="收款单"
                                   domain="['|','&amp;','&amp;','&amp;',('state','=','posted'),('sfk_type','=','rcskd'),('partner_id','=',partner_id),('balance','!=',0),'&amp;','&amp;','&amp;',('state','=','posted'),('sfk_type','=','rcskd'),('partner_id.name','=','未定义'),('balance','!=',0)]"
                                   options="{'no_create':True}"
                                   context="{'form_view_ref': 'yjzy_extend.view_rcskd_form','advance_bank_amount':1}"/>

                            <field name="yjzy_payment_currency_id" string="货币" readonly="1"
                                   options="{'no_create':True,'no_open': True}"/>
                            <field name="yjzy_payment_balance" string="收款单余额"/>
                            <field name="so_id" string="销售合同"
                                   domain="[('partner_id','=', partner_id),('state','not in',['done','verifying','verification','cancel','refuse'])]"
                                   options="{'no_create':True,'no_open': True}"/>
                            <label for="amount" string="收款认领金额"/>
                            <div name="amount_div" class="o_row" string="收款金额">
                                <field name="amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="currency_id" options="{'no_create': True, 'no_open': True}"
                                       groups="base.group_multi_currency"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                            </div>
                            <field name="journal_id" domain="[('type','=', 'renling')]" string="收款日记账"
                                   widget="selection" invisible="1"/>
                            <field name="destination_journal_id" widget="selection" invisible="1"
                                   attrs="{'required': [('payment_type', '=', 'transfer')], 'invisible': [('payment_type', '!=', 'transfer')], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="hide_payment_method" invisible="1"/>
                            <field name="payment_method_id" string=" " widget="radio"
                                   attrs="{'invisible': [('hide_payment_method', '=', True)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_method_code" invisible="1"/>
                        </group>
                        <group>
                            <field name="payment_date" string="认领收款日期"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="sfk_type" readonly="1"/>
                            <field name="payment_type" widget="radio" readonly="1" required="1"/>
                            <field name="partner_type" widget="selection" invisible="1"
                                   attrs="{'required': [('payment_type', 'in', ('inbound', 'outbound'))], 'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))], 'readonly': 1 }"/>
                            <field name="be_renling" invisible="1"/>
                            <field name="advance_ok" label="是否预收" string="是预收" invisible="1"/>
                            <field name="advance_account_id" label="预收科目" string="预收科目" options="{'no_create':True}"
                                   invisible="1"/>

                            <field name="communication"
                                   attrs="{'invisible': [('state', '!=', 'draft'), ('communication', '=', False)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="fault_comments"/>
                        </group>
                    </group>
                    <notebook>
                        <page>
                            <field name="advance_reconcile_order_line_ids"/>
                        </page>
                        <page groups="base.group_system">
                            <group>
                                <field name="gongsi_id" string="公司主体" options="{'no_create':True,'no_open': True}" />
                            </group>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_ysrld_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="arch" type="xml">
            <form string="预收认领单">
                 <header groups="base.group_system">
                     <button name="action_submit" class="oe_highlight"  string="提交" type="object" />
                     <button name="action_account_post" class="oe_highlight"  string="财务确认" type="object" />
                     <button name="action_account_refuse" class="oe_highlight" string="财务拒绝" type="object"/>

                </header>
                <header groups="base.group_system">
                    <button name="post" class="oe_highlight" states="draft" string="Confirm" type="object"
                            groups="base.group_system"/>
                    <button name="action_draft" class="oe_highlight" states="cancelled" string="Set To Draft"
                            type="object" groups="base.group_system"/>
                    <button name="cancel" attrs="{'invisible': [('state', 'in', ['draft','cancelled'])]}"
                            string="Cancel" type="object" groups="base.group_system"/>
                    <button name="open_reconcile_account_move_line" class="oe_highlight" string="打开核销分录" type="object"
                            groups="base.group_system"/>
                    <button name="create_yshxd_ysrl" string="创建应收认领" type="object"/>
                    <button name="compute_advance_balance_total" type="object" string="更新预收认领" groups="base.group_system"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,reconciled,cancelled"/>
                    <field name="is_editable" widget="boolean_toggle" groups="sales_team.group_manager"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">


                        <button name="open_ysrld_yshx" type="object" class="oe_stat_button"
                                icon="fa-bars" string="应收认领单" attrs="{'invisible':[('state','not in',['posted','reconciled'])]}">
                        <field name="advance_reconcile_order_count_all" />

                        </button>

                        <button class="oe_stat_button" name="button_journal_entries"
                                string="Journal Items" type="object"
                                groups="base.group_system"
                                attrs="{'invisible':[('move_line_ids','=',[])]}" icon="fa-bars"/>
                        <field name="move_line_ids" invisible="1"/>
                        <button class="oe_stat_button" name="button_invoices"
                                string="Invoices" type="object"
                                attrs="{'invisible':[('has_invoices','=',False)]}" icon="fa-bars"/>
                        <button class="oe_stat_button" name="open_payment_matching_screen"
                                string="Payment Matching" type="object" groups="base.group_system"
                                attrs="{'invisible':[('move_reconciled','=',True)]}" icon="fa-university"/>
                        <field name="has_invoices" invisible="1"/>
                        <field name="move_reconciled" invisible="1"/>
                    </div>
                    <field name="id" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>


                            <field name="partner_id" options="{'no_create':True,'no_open': True}"
                                   domain="[('is_company','=',True),('customer','=',True)]"
                                   attrs="{'required': [('payment_type', 'in', ('inbound', 'outbound'))], 'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))], 'readonly': [('state', '!=', 'draft')]}"
                                   context="{'default_is_company': True, 'default_supplier': payment_type == 'outbound', 'default_customer': payment_type == 'inbound'}"/>
                            <field name="yjzy_payment_id" string="选择收款单"
                                   domain="['|','&amp;','&amp;','&amp;',('state','=','posted'),('sfk_type','=','rcskd'),('partner_id','=',partner_id),('balance','!=',0),'&amp;','&amp;','&amp;',('state','=','posted'),('sfk_type','=','rcskd'),('partner_id.name','=','未定义'),('balance','!=',0)]"
                                   options="{'no_create':True}"
                                   context="{'form_view_ref': 'yjzy_extend.view_rcskd_form','bank_amount':1}"/>
                            <field name="yjzy_payment_currency_id" string="货币" readonly="1"
                                   options="{'no_create':True,'no_open': True}"/>
                            <field name="yjzy_payment_balance" string="收款单余额"/>
                            <field name="so_id" string="销售合同"
                                   domain="[('partner_id','=', partner_id),('state','not in',['done','verifying','verification','cancel','refuse'])]"
                                   options="{'no_create':True,'no_open': True}"/>

                            <label for="amount" string="收款认领金额"/>
                            <div name="amount_div" class="o_row" string="收款金额">
                                <field name="amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="currency_id" options="{'no_create': True, 'no_open': True}"
                                       groups="base.group_multi_currency"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                            </div>
                            <field name="journal_id" domain="[('type','=', 'renling')]" string="收款日记账"
                                   widget="selection" invisible="1"/>
                            <field name="destination_journal_id" widget="selection"
                                   attrs="{'required': [('payment_type', '=', 'transfer')], 'invisible': [('payment_type', '!=', 'transfer')], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="hide_payment_method" invisible="1"/>
                            <field name="payment_method_id" string=" " widget="radio"
                                   attrs="{'invisible': [('hide_payment_method', '=', True)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_method_code" invisible="1"/>
                        </group>
                        <group>
                            <field name="advance_total" string="被认领金额"/>
                            <field name="advance_balance_total" string="未被认领金额"/>
                            <field name="payment_date" string="认领收款日期"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="sfk_type" readonly="1" attrs="{'invisible':1}"/>
                            <field name="payment_type" widget="radio" readonly="1" attrs="{'invisible':1}" required="1"/>
                            <field name="partner_type" widget="selection" invisible="1"
                                   attrs="{'required': [('payment_type', 'in', ('inbound', 'outbound'))], 'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))], 'readonly': 1 }"/>
                            <field name="be_renling" invisible="1"/>
                            <field name="advance_ok" label="是否预收" string="是预收" invisible="1"/>
                            <field name="advance_account_id" label="预收科目" string="预收科目" options="{'no_create':True}"
                                   invisible="1"/>
                            <field name="communication"
                                   attrs="{'invisible': [('state', '!=', 'draft'), ('communication', '=', False)], 'readonly': [('state', '!=', 'draft')]}"/>

                        </group>
                    </group>
                   <notebook>
                       <page string="预收应收认领明细" attrs="{'invisible':[('advance_reconcile_order_count','=',0)]}">
                           <field name="advance_reconcile_order_line_ids">
                               <tree>
                                   <field name="tb_contract_code"/>
                                   <field name="amount_advance_org"/>
                                   <field name="yjzy_payment_id"/>
                               </tree>
                           </field>
                       </page>

                       <page groups="base.group_system">
                           <group>
                               <field name="advance_reconcile_order_count"/>
                               <field name="gongsi_id" string="公司主体" options="{'no_create':True,'no_open': True}"/>
                           </group>
                            <field name="advance_reconcile_order_ids"/>
                       </page>
                   </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_ysrld">
        <field name="name">预收认领单</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sfk_type','=','ysrld'),('state','!=','cancel')]</field>
        <field name="context">{'bank_amount':1,'show_shoukuan': True, 'default_sfk_type': 'ysrld', 'default_payment_type': 'inbound',
            'default_be_renling': True,
            'default_advance_ok': True, 'default_partner_type': 'customer',}
        </field>

    </record>

    <record id="action_ysrld_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_ysrld_tree"/>
        <field name="act_window_id" ref="action_ysrld"/>
    </record>

    <record id="action_ysrld_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_ysrld_form"/>
        <field name="act_window_id" ref="action_ysrld"/>
    </record>

    <menuitem id="menu_ysrld" sequence="00" name="预收认领单" parent="menu_skf_root" action="action_ysrld"/>


    <menuitem id="menu_ysrld_new" sequence="30" name="预收认领单" parent="menu_new_account_root"/>

    <record id="action_ysrld_undone" model="ir.actions.act_window">
        <field name="name">未生效</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sfk_type','=','ysrld'),('state','not in',['posted','reconciled'])]</field>
        <field name="context">{'show_shoukuan': True, 'default_sfk_type': 'ysrld', 'default_payment_type': 'inbound',
            'default_be_renling': True,'default_advance_ok': True, 'default_partner_type': 'customer',}
        </field>
        <field name="search_view_id" ref="view_account_payment_search_new"/>
        <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_ysrld_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_ysrld_form')})]"/>
    </record>
    <menuitem id="menu_new_ysrld_undone" parent="menu_ysrld_new" name="未生效" sequence="10"
              action="action_ysrld_undone"/>

     <record id="action_ysrld_balance" model="ir.actions.act_window">
        <field name="name">未认领完成</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sfk_type','=','ysrld'),('state','in',['posted','reconciled']),('advance_balance_total','!=',0)]</field>
        <field name="context">{'show_shoukuan': True, 'default_sfk_type': 'ysrld', 'default_payment_type': 'inbound',
            'default_be_renling': True,'default_advance_ok': True, 'default_partner_type': 'customer',}
        </field>
        <field name="search_view_id" ref="view_account_payment_search_new"/>
        <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_ysrld_reconcile_tree_1')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_ysrld_form')})]"/>
    </record>
    <menuitem id="menu_new_ysrld_balance" parent="menu_ysrld_new" name="未认领完成" sequence="20"
              action="action_ysrld_balance"/>

    <record id="action_ysrld_no_balance" model="ir.actions.act_window">
        <field name="name">认领完成</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sfk_type','=','ysrld'),('state','in',['posted','reconciled']),('advance_balance_total','=',0)]</field>
        <field name="context">{'show_shoukuan': True, 'default_sfk_type': 'ysrld', 'default_payment_type': 'inbound',
            'default_be_renling': True,'default_advance_ok': True, 'default_partner_type': 'customer',}
        </field>
            <field name="search_view_id" ref="view_account_payment_search_new"/>
        <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_ysrld_reconcile_tree_1')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_ysrld_form')})]"/>
    </record>
    <menuitem id="menu_new_ysrld_no_balance" parent="menu_ysrld_new" name="认领完成" sequence="30"
              action="action_ysrld_no_balance"/>

     <record id="action_ysrld_create" model="ir.actions.act_window">
        <field name="name">创建预收认领单</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="domain">[('sfk_type','=','ysrld'),('state','in',['posted','reconciled']),('advance_balance_total','=',0)]</field>
        <field name="context">{'show_shoukuan': True, 'default_sfk_type': 'ysrld', 'default_payment_type': 'inbound',
            'default_be_renling': True,'default_advance_ok': True, 'default_partner_type': 'customer',}
        </field>
            <field name="search_view_id" ref="view_account_payment_search_new"/>
        <field name="view_ids" eval="[(5, 0, 0),

                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_ysrld_form')})]"/>
    </record>
    <menuitem id="menu_new_ysrld_create" parent="menu_ysrld_new" name="创建预收认领单" sequence="99"
              action="action_ysrld_create"/>



        <record id="action_new_ysrld_reconcile_1" model="ir.actions.act_window">
        <field name="name">预收认领单</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sfk_type','=','ysrld'),('state','in',['posted','reconciled'])]</field>
        <field name="context">{'show_shoukuan': True, 'default_sfk_type': 'ysrld', 'default_payment_type': 'inbound',
            'default_be_renling': True,'default_advance_ok': True, 'default_partner_type': 'customer',}
