                <field name="currency_id" attrs="{}" invisible="1" required="1"/>
                <field name="amount" string="金额"/>
                <field name="state_fkzl"/>
                <field name="state" invisible="1"/>
                <field name="state_1" groups="sales_team.group_manager" invisible="1"/>
            </tree>
        </field>
    </record>

