                              ]"/>
        </record>
       <menuitem id="menu_account_invoice_extra_po_all" action="action_account_invoice_extra_po_all"
                  parent="yjzy_extend.menu_extra_po_root" name="所有新增账单"
                  sequence="90"
        />

