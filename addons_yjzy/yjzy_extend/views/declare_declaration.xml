<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_declare_declaration_tree" model="ir.ui.view">
            <field name="name">declare.declaration.tree</field>
            <field name="model">declare.declaration</field>
            <field name="arch" type="xml">
                <tree string="报关申报表" >
                    <field name="name"/>
                    <field name="create_date" string="创建日期"/>
                    <field name="amount_all"/>
                    <field name="amount_residual"/>
                </tree>
            </field>
        </record>
        <record id="view_declare_declaration_form" model="ir.ui.view">
            <field name="name">declare.declaration.form</field>
            <field name="model">declare.declaration</field>
            <field name="arch" type="xml">
                <form string="报关申报表">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>

                        <group>
                            <field name="name"/>
                            <field name="amount_all"/>
                            <field name="amount_residual"/>
                            <field name="create_uid" string="创建者"/>
                            <field name="create_date" string="创建日期"/>
                        </group>

                        </group>
                    <notebook>
                        <page>
                            <field name="invoice_back_tax_ids" widget="many2many" domain="[('yjzy_type','=','back_tax')]">
                                <tree>
                                    <field name="tb_contract_code"/>
                                    <field name="residual_signed"/>
                                    <field name="state"/>
                                    <field name="fault_comments"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                       </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

     <record id="action_declare_declaration" model="ir.actions.act_window">
        <field name="name">报关申报表</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">declare.declaration</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_gongsi" name="报关申报表" parent="yjzy_extend.menu_declare_root" action="action_declare_declaration" sequence=""/>


    </data>
</odoo>