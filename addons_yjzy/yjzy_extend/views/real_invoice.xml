<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_real_invoice_tree" model="ir.ui.view">
            <field name="name">real.invoice.tree</field>
            <field name="model">real.invoice</field>
            <field name="arch" type="xml">
                <tree string="发票认证" >
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="create_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_real_invoice_form" model="ir.ui.view">
            <field name="name">real.invoice.form</field>
            <field name="model">real.invoice</field>
            <field name="arch" type="xml">
                <form string="发票认证">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>

                        <group>
                            <field name="name"/>
                           <field name="partner_id"/>
                            <field name="create_date"/>
                            <field name="currency_id"/>
                        </group>

                        </group>
                        <group colspan="2">
                            <group>
                                <field name="invoice_ids" colspan="2" nolabel="1">
                                    <tree>
                                <field name="partner_id" string="客户"/>
                                <field name="tb_contract_code" string="出运合同号"/>

                                <field name="amount_total_signed" string="合计"/>
                                <field name="residual_signed" string="未收款"/>
                                <field name="state" sting="状态"/>
                              <button name="create_real_invoice_line" type="object" string="认证" context="{'real_invoice_id':parent.id}"/>
                                          <field name="certifying" widget="boolean_toggle"/>
                            </tree>



                                </field>
                            </group>
                            <group>
                                <field name="line_ids" colspan="2" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="real_invoice_id"/>
                                        <field name="real_invoice_date"/>
                                        <field name="real_invoice_partner"/>
                                        <field name="certification_amount"/>
                                        <field name="amount"/>
                                        <field name="type"/>
                                        <field name="certifying" widget="boolean_toggle"/>
                                    </tree>

                                </field>
                            </group>
                        </group>
                    <notebook>
                        <page groups="base.group_system">
                            <field name="certification_invoice_ids">
                                <tree>
                                    <field name="real_invoice_line_id"/>
                                    <field name="amount"/>
                                    <field name="certifying" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                       </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

     <record id="action_real_invoice" model="ir.actions.act_window">
        <field name="name">发票认证</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">real.invoice</field>
        <field name="view_mode">tree,form</field>
         <field name="context">{}</field>
    </record>


    <menuitem id="menu_real_invoice" name="发票认证"  sequence="99" groups="base.group_system"/>
    <menuitem id="menu_real_invoice_action" name="创建退税申报" parent="yjzy_extend.menu_real_invoice" action="action_real_invoice" sequence="10"/>


    </data>
</odoo>