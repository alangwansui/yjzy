<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

 <record id="tb_po_tree" model="ir.ui.view">
            <field name="name">tb.po.tree</field>
            <field name="model">tb.po.invoice</field>
            <field name="arch" type="xml">
                <tree string="增加采购" create="false">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="purchase_invoice_amount"/>
                    <field name="purchase_invoice_include_tax"/>
                    <field name="p_s_add_this_time_refund"/>
                    <field name="p_s_add_this_time_extra_total"/>
                    <field name="back_tax_add_this_time_total"/>
                    <field name="create_date"/>
                    <field name="purchase_invoice_origin_id"/>
                </tree>
            </field>
        </record>
        <record id="tb_po_form" model="ir.ui.view">
            <field name="name">tb.po.from</field>
            <field name="model">tb.po.invoice</field>
            <field name="arch" type="xml">
                <form string="添加采购金额">
                    <header>
                        <button name="action_submit" states="10_draft,40_refuse" class="oe_highlight" type='object' string="提交"/>
                        <button name="action_manager_approve"  states="20_submit" class="oe_highlight" type='object' string="总经理审批"/>
                        <button name="action_refuse"  class="oe_highlight" type='object' string="拒绝"/>
                        <button name="apply_expense_sheet" class="oe_highlight" type='object' groups="base.group_system" string="费用确认" attrs="{'invisible':[('type','!=','expense_po')]}"/>
                        <button name="apply" class="oe_highlight" type='object' string="确认" groups="base.group_system" attrs="{'invisible':[('type','!=','other_po')]}"/>
                        <button special="cancel" class="oe_highlight" groups="base.group_system" string="取消"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                    <group col="2">
                    <group>
                        <field name="partner_id" string="供应商" domain="[('supplier', '=', True),('is_company','=',True)]"/>
                        <field name="tb_id" attrs="{'invisible':[('type','!=','other_po')]}"/>
                        <field name="expense_sheet_id" attrs="{'invisible':[('type','!=','expense_po')]}"/>
                        <field name="purchase_invoice_origin_id" attrs="{'invisible':[('type','!=','other_po')]}"/>
                        <field name="invoice_product_id" attrs="{'invisible':[('type','!=','other_po')]}"/>
                        <field name="type"/>
                    </group>
                        <group>
                            <field name="purchase_invoice_amount" attrs="{'invisible':[('type','!=','other_po')]}"/>
                        <field name="purchase_invoice_include_tax" string="原始采购含税" attrs="{'invisible':[('type','!=','other_po')]}"/>
                        <field name="p_s_add_this_time_refund" attrs="{'invisible':['|',('purchase_invoice_include_tax','=',True),('type','!=','other_po')]}" string="冲减金额"/>
                        <field name="p_s_add_this_time_extra_total" string="冲减后应收" attrs="{'invisible':[('type','!=','other_po')]}"/>
                        <field name="purchase_amount2_add_this_time_total" string="增加采购总额"/>
                        <field name="back_tax_add_this_time_total" string="退税金额" attrs="{'invisible':[('type','!=','other_po')]}"/>

                          <field name="expense_currency_id" attrs="{'invisible':[('type','!=','expense_po')]}"/>
                          <field name="expense_sheet_amount" attrs="{'invisible':[('type','!=','expense_po')]}"/>
                    </group>
                    </group>
                    <notebook>
                   <page string="明细行" >
                        <field name="hsname_all_ids">
                            <tree editable="bottom">
                                <field name="hs_id"/>
                                <field name="hsname_all_line_id" invisible="1"/>
                                <!--field name="purchase_amount2_tax"/>
                                <field name="purchase_amount2_no_tax"/-->
                                <field name="back_tax" attrs="{'invisible':[('parent.type','!=','expense_po')]}"/>
                                <field name="amount2"/>
                                <field name="purchase_amount2_tax" sum="小计" attrs="{'column_invisible':[('parent.type','!=','other_po')]}"/>
                                <field name="purchase_amount2_no_tax" sum="小计" attrs="{'column_invisible':[('parent.type','!=','other_po')]}"/>
                                <field name="purchase_back_tax_amount2_new" string="实际退税金额" sum="小计" attrs="{'column_invisible':[('parent.type','!=','other_po')]}"/>
                                <field name="purchase_amount_min_add_forecast" sum="小计" attrs="{'column_invisible':[('parent.type','!=','other_po')]}"/>
                                <field name="purchase_amount_max_add_forecast" sum="小计" attrs="{'column_invisible':[('parent.type','!=','other_po')]}"/>
                                <field name="purchase_amount2_add_actual" sum="小计" attrs="{'column_invisible':[('parent.type','!=','other_po')]}"/>
                                <field name="purchase_amount_min_add_rest" attrs="{'column_invisible':[('parent.type','!=','other_po')]}"/>
                                <field name="purchase_amount_max_add_rest" attrs="{'column_invisible':[('parent.type','!=','other_po')]}"/>
                                <field name="purchase_amount2_add_this_time"/>
                                <field name="p_s_add_this_time"/>
                                <field name="back_tax_add_this_time"/>

                            </tree>
                        </field>

                    </page>
                    <page string="额外发票">
                        <field name="invoice_ids"/>
                    </page>
                    <page string="额外采购发票">
                        <field name="invoice_p_ids"/>
                    </page>
                    <page string="额外冲减发票">
                        <field name="invoice_p_s_ids"/>
                    </page>
                    <page string="额外退税发票">
                        <field name="invoice_back_tax_ids"/>
                    </page>
                    <page string="额外应收发票">
                        <field name="invoice_s_ids"/>
                    </page>
                    </notebook>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_tb_po">
            <field name="name">新增采购申请单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tb.po.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="limit">20</field>
            <field name="context">{}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('tb_po_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('tb_po_form')})]"/>

        </record>

        <menuitem id="menu_tb_po_tree" name="新增采购申请单"
                  parent="yjzy_extend.menu_extra_po_root"
                  sequence="10"
                  action="act_tb_po"
        />
        <record model="ir.actions.act_window" id="act_tb_po_create">
            <field name="name">创建新增采购申请单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tb.po.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="limit">20</field>
            <field name="context">{'default_type':'other_po'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('tb_po_form')})]"/>
        </record>

        <menuitem id="menu_tb_po_create" name="创建新增采购申请单"
                  parent="yjzy_extend.menu_extra_po_root"
                  sequence="20"
                  action="act_tb_po_create"        />

        <record model="ir.actions.act_window" id="act_expense_po_create">
            <field name="name">创建费用转应付申请单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tb.po.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="limit">20</field>
            <field name="context">{'default_type':'expense_po'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('tb_po_form')})]"/>
        </record>

        <menuitem id="menu_expense_po_create" name="创建费用转应付申请单"
                  parent="yjzy_extend.menu_extra_po_root"
                  sequence="20"
                  action="act_expense_po_create"/>


    </data>
</odoo>