<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- 内部付款菜单 -->
    <record id="action_account_payments_transfer" model="ir.actions.act_window">
        <field name="name">内部转账</field>
        <field name="res_model">account.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form,graph</field>
        <field name="context">{'default_payment_type': 'transfer'}</field>
        <field name="domain">[('payment_type', '=', 'transfer')]</field>
    </record>
    <menuitem action="action_account_payments_transfer" id="menu_account_payments_transfer"
              parent="account.menu_finance_receivables_documents" sequence="21"/>


    <!-- -->

    <record model="ir.ui.view" id="inherit_invoice_tree">
        <field name="name">account.invoice.tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="bill_id"/>
                <field name="yjzy_type"/>
                <field name="include_tax"/>
                <field name="date_deadline"/>
                <field name="tb_contract_code"/>
                <field name="po_id"/>
                <field name="purchase_contract_code"/>
                <field name="gongsi_id"/>
            </tree>
        </field>
    </record>

    <record id="inherit_invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='name']" position="after">
                <field name="so_id"/>
            </xpath>

            <field name="state" position="before">
                <button string="HS品名统计" type="object" name="make_hs_name_items"/>
            </field>

            <xpath expr="//sheet/group" position="attributes">
                <attribute name="col">3</attribute>
            </xpath>

            <xpath expr="//sheet/group" position="inside">
                <group>
                    <field name="date_ship"/>
                    <field name="date_finish"/>
                    <field name="date_deadline"/>
                    <field name="bill_id"/>
                    <field name="yjzy_type"/>
                    <field name="include_tax"/>
                    <field name="tb_contract_code"/>
                    <field name="po_id" arrts="{'invisible':[('type','in',['out_invoice','out_refund'])]}"/>
                    <field name="purchase_contract_code" arrts="{'invisible':[('type','in',['out_invoice','out_refund'])]}"/>
                    <field name="sale_assistant_id"/>
                    <field name="gongsi_id" string="销售主体"/>
                </group>
            </xpath>


            <notebook position="inside">
                <page string="相关分录">
                    <group>
                        <field name="move_ids" readonly="1"/>
                        <field name="move_line_ids" readonly="1"/>
                    </group>
                </page>
                <page string="HS品名汇总">
                    <field name="item_ids">
                        <tree>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="price"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record id="inherit_invoice_supplier_form" model="ir.ui.view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='name']" position="after">
                <field name="purchase_id"/>
            </xpath>

            <field name="state" position="before">
                <button string="HS品名统计" type="object" name="make_hs_name_items"/>
            </field>
            <field name="currency_id" position="before">
                <field name="date_ship"/>
                <field name="date_finish"/>
                <field name="bill_id"/>
                <field name="yjzy_type"/>
                <field name="include_tax"/>
                <field name="tb_contract_code"/>
                <field name="po_id"/>
                <field name="purchase_contract_code"/>
                <field name="gongsi_id"/>
            </field>
            <notebook position="inside">
                <page string="相关分录">
                    <group>
                        <field name="move_ids" readonly="1"/>
                        <field name="move_line_ids" readonly="1"/>
                    </group>
                </page>
                <page string="HS品名汇总">
                    <field name="item_ids">
                        <tree>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="price"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </page>
            </notebook>


        </field>
    </record>
     <record id="view_account_invoice_new_tree" model="ir.ui.view">
            <field name="name">account.invoice.new.tree</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <tree string="发票" editable="bottom">
                    <field name="partner_id" groups="base.group_user" string="Vendor"/>
                    <field name="date_invoice" string="Bill Date" invisible="1"/>
                    <field name="number" invisible="1"/>
                    <field name="reference" invisible="1"/>
                    <field name="commercial_partner_id" invisible="1"/>
                    <field name="date_finish"/>
                    <field name="purchase_date_finish_att" widget="many2many_binary"/>
                    <field name="purchase_date_finish_state"/>
                    <button icon="fa-check" attrs="{'invisible':[('purchase_date_finish_state','!=','done')]}"/>
                    <button name="action_purchase_date_finish_state_submit" attrs="{'invisible':[('purchase_date_finish_state','!=','draft')]}" type="object"  string="提交"/>
                    <button name="action_purchase_date_finish_state_done" attrs="{'invisible':[('purchase_date_finish_state','!=','submit')]}" type="object" string="通过"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="state"/>
                    <field name="type" invisible="context.get('type',True)"/>
                </tree>
            </field>
        </record>

    <record id="view_account_invoice_back_tax_tree" model="ir.ui.view">
            <field name="name">account.invoice.back.tax.tree</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <tree string="应收退税" editable="bottom">
                    <field name="partner_id" groups="base.group_user" string="Vendor" invisible="1"/>
                    <field name="tb_contract_code"/>
                    <field name="amount_total_signed"/>
                    <field name="residual_signed"/>
                    <field name="date_invoice" string="Bill Date" invisible="1"/>
                    <field name="number" invisible="1"/>
                    <field name="reference" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="state"/>
                    <field name="type" invisible="context.get('type',True)"/>
                </tree>
            </field>
        </record>



</odoo>
