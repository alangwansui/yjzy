<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sale_order_cost_tree" model="ir.ui.view">
            <field name="name">sale.order.cost.tree</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="999"/>
            <field name="arch" type="xml">
                <tree string="成本单" create="false">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="contract_code"/>
                    <field name="contract_date"/>
                    <field name="link_man_id"/>
                    <field name="cip_type"/>
                    <field name="state" invisible="1"/>
                    <field name="state2"/>
                </tree>
            </field>
        </record>
        <record id="view_sale_order_cost_form" model="ir.ui.view">
            <field name="name">sale.order.cost.form</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="999"/>
            <field name="arch" type="xml">
                <form string="成本单">
                    <header>
                        <!--button name="compute_cost" string="计算成本" type="object"  class="oe_highlight"/-->
                        <button name="action_confirm2" string="确认" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state2','!=', 'draft')]}"/>
                        <button name="action_done2" string="完成" type="object" class="oe_highlight" attrs="{'invisible': [('state2','!=', 'confirm')]}"/>


                        <button name="update_back_tax" string="更新退税" type='object' icon=""/>

                        <field name="state2" widget="statusbar"/>
                        <field name="state" invisible="1"/>
                        <field name="is_editable"  widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <group col="3">
                            <group>
                                <field name="sale_currency_id" readonly="1"/>
                                <field name="name" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="contract_code" readonly="1"/>
                                <field name="contract_date" readonly="1"/>
                                <field name="cip_type" readonly="1"/>
                                <field name="incoterm_code" readonly="1"/>
                                <field name="commission_ratio" readonly="0"/>
                                <field name="user_id" readonly="1"/>
                                <field name="sale_assistant_id" readonly="1"/>
                                <field name="product_manager_id" readonly="1"/>
                                <field name="include_tax"/>
                                <field name="company_id" invisible="1" readonly="1"/>
                            </group>
                            <group>
                                <field name="company_currency_id" invisible="0" readonly="1"/>
                                <field name="fee_inner"/>
                                <field name="fee_rmb1"/>
                                <field name="fee_rmb2"/>
                                <field name="fee_rmb_all"/>
                                <field name="other_currency_id"/>
                                <field name="fee_outer"/>
                                <field name="fee_export_insurance"/>
                                <field name="fee_other"/>
                                <field name="fee_outer_all"/>
                                <field name="vat_diff_amount"/>
                                <field name="mark_comb_id"/>
                            </group>
                            <group>
                                <field name="third_currency_id" domain="['|',('id','=', company_currency_id),('id','=', sale_currency_id)]"/>
                                <field name="advance_residual"/>
                                <field name="advance_account_id"/>
                                <field name="amount_total2"/>
                                <field name="commission_amount"/>
                                <field name="purchase_cost"/>
                                <field name="fandian_amoun"/>
                                <field name="stock_cost"/>
                                <field name="other_cost"/>
                                <field name="back_tax_amount"/>
                                <field name="fee_rmb_ratio"/>
                                <field name="fee_outer_ratio"/>
                                <field name="profit_amount"/>


                                <label for="profit_ratio" string="净利润率"/>
                                <div><field name="profit_ratio" class="oe_inline"/>%
                                </div>

                                <field name="gross_profit"/>
                                <label for="gorss_profit_ratio" string="毛利率"/>
                                <div><field name="gorss_profit_ratio" class="oe_inline"/>%
                                </div>
                            </group>

                        </group>
                        <notebook>
                            <page string="销售明细">
                                <field name="order_line" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="back_tax"/>
                                        <field name="product_uom_qty" sum="Total"/>
                                        <field name="product_uom"/>
                                        <field name="smline_str"/>
                                        <field name="smline_qty"/>
                                        <field name="dlr_str"/>
                                        <field name="dlr_qty"/>
                                        <field name="price_total" sum="销售"/>
                                        <field name="price_total2" sum="销售"/>
                                        <field name="purchase_cost" sum="采购"/>
                                        <field name="fandian_amoun" sum="返点"/>
                                        <field name="stock_cost" sum="库存"/>
                                        <field name="back_tax_amount" sum="退税"/>
                                        <field name="sale_currency_id" invisible="1"/>
                                        <field name="company_currency_id" invisible="1"/>
                                        <field name="third_currency_id" invisible="1"/>
                                        <field name="s_uom_id"/>
                                        <field name="p_uom_id"/>

                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <field name="note" class="oe_inline"
                                       placeholder="Setup default terms and conditions in your sales settings ..."/>
                                <div class="oe_clear"/>
                            </page>

                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_sale_order_cost_view">
            <field name="name">成本单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sale_order_cost_view_form">
            <field name="act_window_id" ref="act_open_sale_order_cost_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_order_cost_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sale_order_cost_view_tree">
            <field name="act_window_id" ref="act_open_sale_order_cost_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sale_order_cost_tree"/>
        </record>

        <menuitem id="menu_sale_order_cost" name="成本单"
                  parent="sale.sale_order_menu"
                  sequence="20"
                  action="act_open_sale_order_cost_view"/>


    </data>
</odoo>