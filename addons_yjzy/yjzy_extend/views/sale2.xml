<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sale_order_cost_tree" model="ir.ui.view">
            <field name="name">sale.order.cost.tree</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="999"/>
            <field name="arch" type="xml">
                <tree string="成本单" create="false">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="contract_code"/>
                    <field name="contract_date"/>
                    <field name="link_man_id"/>
                    <field name="cip_type"/>
                    <field name="state" invisible="1"/>
                    <field name="state2"/>
                </tree>
            </field>
        </record>
        <record id="view_sale_order_cost_form" model="ir.ui.view">
            <field name="name">sale.order.cost.form</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="999"/>
            <field name="arch" type="xml">
                <form string="成本单" class="o_sale_order">
                    <header>
                        <!--button name="compute_cost" string="计算成本" type="object"  class="oe_highlight"/-->
                        <button name="action_confirm2" string="确认" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state2','!=', 'draft')]}" invisible="1"/>
                        <button name="action_done2" invisible="1" string="完成" type="object" class="oe_highlight" attrs="{'invisible': [('state2','!=', 'confirm')]}"/>
                        <button name="update_back_tax" string="更新退税" type='object' icon="" invisible="1"/>
                        <field name="state2" widget="statusbar" invisible="1"/>
                        <field name="state" invisible="0" widget="statusbar" />

                    </header>
                    <sheet>
                        <group col="3">
                            <group>
                                <field name="sale_currency_id" readonly="1" groups="base.group_system"/>
                                <field name="contract_code" readonly="1"/>
                                <field name="name" readonly="1" invisible="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="country_id"/>
                                <field name="contract_date" readonly="1" invisible=""/>
                                <field name="cip_type" readonly="1"/>
                                <field name="incoterm_code" readonly="1" string="价格条款"/>
                                <field name="mark_comb_id" string="唛头" readonly="1"/>
                                <field name="commission_ratio" readonly="1"/>
                                <field name="product_manager_id" readonly="1" invisible="1"/>
                                <field name="include_tax" readonly="1"/>
                                <field name="exchange_rate" string="计算汇率"/>
                                <field name="company_id" invisible="1" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                                <field name="sale_assistant_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="company_currency_id" invisible="0" readonly="1" groups="base.group_system"/>
                                <field name="fee_inner" readonly="1"/>
                                <field name="fee_rmb1" readonly="1"/>
                                <field name="fee_rmb1_note" readonly="1"/>
                                <field name="fee_rmb2" readonly="1"/>
                                <field name="fee_rmb2_note" readonly="1"/>
                                <field name="fee_rmb_all" string="人名币费用合计" readonly="1"/>
                                <field name="other_currency_id" string="外币币种" invisible="1"/>
                                <field name="fee_outer" readonly="1"/>
                                <field name="fee_export_insurance" readonly="1"/>
                                <field name="fee_other" readonly="1"/>
                                <field name="fee_other_note" readonly="1"/>
                                <field name="fee_outer_all" readonly="1"/>
                                <field name="vat_diff_amount" readonly="1"/>
                                <field name="second_cost" invisible="1"/>
                                <field name="second_porfit" invisible="1"/>
                                <field name="second_tenyale_profit" invisible="1"/>
                            </group>
                            <group>
                                <field name="third_currency_id" domain="['|',('id','=', company_currency_id),('id','=', sale_currency_id)]" groups="base.group_system"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="amount_total" widget="monetary" string="销售外币金额" options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_total2" string="销售本币金额"/>
                                <field name="advance_account_id" invisible="1"/>
                                <field name="advance_residual" string="预收剩余"/>
                                <field name="purchase_stock_cost" string="采购成本"/>

                                <field name="purchase_cost" invisible="1"/>
                                <field name="other_cost"/>
                                <field name="back_tax_amount" />
                                <field name="commission_amount"/>


                                <field name="fandian_amoun" invisible="1"/>
                                <field name="stock_cost" invisible="1"/>



                                <label for="fee_rmb_ratio" string="人民币费用占比"/>
                                <div><field name="fee_rmb_ratio" class="oe_inline"/>%</div>
                                <label for="fee_outer_ratio" string="外币费用占比"/>
                                <div><field name="fee_outer_ratio" class="oe_inline"/>%</div>


                                <field name="profit_amount" string="净利润" options="{'fg_color': 'red:profit_amount &lt; True'}"/>
                                <label for="profit_ratio" string="净利润率%"/>
                                <div><field name="profit_ratio" class="oe_inline"/>%
                                </div>
                                <field name="gross_profit" string="毛利润"/>
                                <label for="gorss_profit_ratio" string="毛利润率%"/>
                                <div><field name="gorss_profit_ratio" class="oe_inline"/>%
                                </div>
                            </group>

                        </group>
                        <notebook>
                            <page string="销售明细">
                                <field name="order_line" readonly="1" mode="tree,kanban">
                                    <form string="销售订单明细">
                                        <group>
                                            <group>
                                                <field name="product_updatable" invisible="1"/>
                                                <field name="product_id" />
                                                <field name="layout_category_id" groups="sale.group_sale_layout"/>
                                                <field name="invoice_status" invisible="1"/>
                                                <field name="qty_to_invoice" invisible="1"/>
                                                <field name="qty_delivered_updateable" invisible="1"/>
                                                <field name="price_subtotal" invisible="1"/>
                                                <label for="product_uom_qty" string="订购数量"/>
                                                <div>
                                                    <field  name="product_uom_qty" class="oe_inline"/>
                                                    <field name="product_uom" groups="product.group_uom" class="oe_inline oe_no_button"
                                                           attrs="{'readonly': [('state', 'in', ('sale','done', 'cancel'))]}"/>
                                                </div>
                                                  <field name="price_unit"/>
                                                  <field name="is_gold_sample" string="金样状态"/>
                                                 <field name="include_tax"/>
                                                <field name="hs_id"/>
                                                <field name="back_tax"/>
                                                <field name="price_total" widget="monetary" groups="sale.group_show_price_total"/>
                                                <field name="back_tax_amount"/>





                                                <field name="route_id" groups="sale_stock.group_route_so_lines" options="{'no_create': True}"/>

                                                <field name="lot_sub_name" groups="base.group_system"/>

                                                <field name="quant_id" invisible="1" domain="[('product_id','=', product_id),('location_id.usage', '=', 'internal')]" />
                                                <field name="lot_id" string="批次号"/>



                                                <label for="discount" groups="sale.group_discount_per_so_line"/>
                                                <div name="discount" groups="sale.group_discount_per_so_line">
                                                    <field name="discount" class="oe_inline"/>
                                                    %
                                                </div>
                                            </group>
                                            <group>
                                                <field name="supplier_id"/>
                                                 <field name="purchase_price"/>
                                                <field name="purchase_cost"/>
                                                <field name="pol_id"/>



                                                <field name="need_print"/>



                                                <label for="customer_lead"/>
                                                <div invisible="1">
                                                    <field name="customer_lead" class="oe_inline"/>
                                                    天
                                                </div>
                                                <label for="analytic_tag_ids" groups="analytic.group_analytic_accounting" invisible="1"/>
                                                <div invisible="1">
                                                    <field name="analytic_tag_ids" widget="many2many_tags" groups="analytic.group_analytic_accounting"
                                                           options="{'color_field': 'color'}"/>
                                                </div>


                                                <label for="qty_delivered" string="已交货数量"
                                                       attrs="{'invisible': [('parent.state', 'not in', ['sale', 'done'])]}"/>
                                                <div attrs="{'invisible': [('parent.state', 'not in', ['sale', 'done'])]}">
                                                    <field name="qty_delivered" attrs="{'readonly': [('qty_delivered_updateable', '=', False)]}"/>
                                                </div>
                                                <label for="qty_invoiced" string="已开发票数量"
                                                       attrs="{'invisible': [('parent.state', 'not in', ['sale', 'done'])]}"/>
                                                <div attrs="{'invisible': [('parent.state', 'not in', ['sale', 'done'])]}">
                                                    <field name="qty_invoiced" attrs="{'invisible': [('parent.state', 'not in', ['sale', 'done'])]}"/>
                                                </div>
                                            </group>
                                        </group>
                                        <label for="name" invisible="1"/>
                                        <field name="name" invisible="1"/>
                                        <div groups="base.group_no_one">
                                            <label for="invoice_lines"/>
                                            <field name="invoice_lines"/>
                                        </div>
                                        <field name="state" invisible="1"/>
                                    </form>
                                    <button name="open_multi_select_product" string="Multi select product" type="object" class="oe_highlight"/>
                                    <tree string="销售订单明细" decoration-info="invoice_status=='to invoice'" limit="10" readonly="1" decoration-danger="product_uom_qty != dlr_qty"><!--editable="bottom" -->
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_updatable" invisible="1"/>
                                        <button type="object" name="get_in_stock_quant" icon="fa-archive"/>
                                        <field name="product_id"/>
                                         <field name="product_uom_qty" string="数量"/>
                                        <field name="s_uom_id" string="单位"/>
                                        <field name="is_gold_sample" string="金样状态"/>
                                        <field name="layout_category_id" groups="sale.group_sale_layout"/>
                                        <field name="name" invisible="1"/>
                                        <field name="hs_id"/>
                                        <field name="price_unit" attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}"/>
                                        <field name="back_tax"/>
                                        <field name="price_total" widget="monetary" groups="sale.group_show_price_total"/>
                                        <field name="back_tax_amount"/>
                                        <field name="second_unit_price" groups="base.group_system"/>
                                        <field name="second_price_total" groups="base.group_system"/>
                                        <field name="purchase_price"/>
                                        <field name="p_uom_id"  string="单位"/>
                                        <field name="purchase_cost"/>
                                        <field name="supplier_id"/>


                                        <field name="quant_id" domain="[('product_id','=', product_id)]" groups="base.group_system"/>
                                        <field name="pol_id" groups="base.group_system"/>
                                        <field name="smline_str" column_invisible="1" invisible="1" readonly="1"/>
                                        <field name="smline_qty" invisible="1" readonly="1"/>
                                        <field name="dlr_str" groups="base.group_system"/>
                                        <field name="dlr_qty" invisible="1" readonly="1"/>
                                        <button icon="fa-list" type="object" name="open_wizard_sol_reserver"/>
                                        <field name="dlr_done_qty" groups="base.group_system" invisible="1" readonly="1"/>
                                        <field name="dlr_todo_qty" groups="base.group_system"/>
                                        <field name="qty_pre_all" groups="base.group_system" invisible="1" readonly="1"/>
                                        <field name="lot_sub_name" groups="base.group_system"/>

                                        <field name="product_qty" invisible="1"/>
                                        <field name="qty_available" readonly="1" invisible="1"/>
                                        <field name="virtual_available" readonly="1" invisible="1"/>
                                        <field name="qty_delivered"
                                               attrs="{'column_invisible': [('parent.state', 'not in', ['sale', 'done'])], 'readonly': [('qty_delivered_updateable', '=', False)]}"/>
                                        <field name="qty_invoiced" attrs="{'column_invisible': [('parent.state', 'not in', ['sale', 'done'])]}"/>
                                        <field name="qty_to_invoice" invisible="1"/>
                                        <field name="product_uom" attrs="{'readonly': [('state', 'in', ('sale','done', 'cancel'))]}" invisible="1" required="1"
                                               context="{'company_id': parent.company_id}" groups="product.group_uom" options="{&quot;no_open&quot;: True}"/>
                                        <field name="analytic_tag_ids" groups="base.group_system" widget="many2many_tags"
                                               options="{'color_field': 'color'}"/>
                                        <field name="last_sale_price" invisible="1" readonly="1"/>

                                        <field name="bom_id" groups="base.group_system"/>
                                        <field name="bom_qty" groups="base.group_system"/>
                                        <field name="need_split_bom" string="展开bom" groups="base.group_system"/>
                                        <field name="need_print" groups="base.group_system"/>



                                        <field name="route_id" groups="sale_stock.group_route_so_lines" options="{'no_create': True}"/>

                                        <field name="tax_id" widget="many2many_tags" options="{'no_create': True}"
                                               domain="[('type_tax_use','=','sale'),('company_id','=',parent.company_id)]"
                                               attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}" invisible="1"/>




                                        <button string="查看库存批次" type="object" name="get_in_stock_quant" invisible="1"/>
                                        <field name="discount" groups="sale.group_discount_per_so_line"/>
                                        <field name="price_subtotal" widget="monetary" groups="sale.group_show_price_subtotal"/>

                                        <field name="qty_delivered_updateable" invisible="1"/>
                                        <field name="state" invisible="1"/>
                                        <field name="invoice_status" invisible="1"/>
                                        <field name="customer_lead" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <button icon="fas fa-eye" type="object" name="show_product_attrs"/>
                                        <field name="purchase_contract_code"/>
                                        <field name="lot_id" string="批次号" groups="base.group_system"/>

                                    </tree>
                                    <kanban class="o_kanban_mobile">
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom" groups="product.group_uom"/>
                                        <field name="price_subtotal"/>
                                        <field name="price_unit"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                                    <div class="row">
                                                        <div class="col-xs-8">
                                                            <strong>
                                                                <span>
                                                                    <t t-esc="record.product_id.value"/>
                                                                </span>
                                                            </strong>
                                                        </div>
                                                        <div class="col-xs-4">
                                                            <strong>
                                                                <span class="pull-right text-right">
                                                                    <t t-esc="record.price_subtotal.value"/>
                                                                </span>
                                                            </strong>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-xs-12 text-muted">
                                                            <span>数量：
                                                                <t t-esc="record.product_uom_qty.value"/>
                                                                <t t-esc="record.product_uom.value"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-xs-12 text-muted">
                                                            <span>单价:
                                                                <t t-esc="record.price_unit.value"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <hr/>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total"/>
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <field name="note" class="oe_inline"
                                       placeholder="Setup default terms and conditions in your sales settings ..."/>
                                <div class="oe_clear"/>
                            </page>

                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_sale_order_cost_view">
            <field name="name">成本单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sale_order_cost_view_form">
            <field name="act_window_id" ref="act_open_sale_order_cost_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_order_cost_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sale_order_cost_view_tree">
            <field name="act_window_id" ref="act_open_sale_order_cost_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sale_order_cost_tree"/>
        </record>

        <menuitem id="menu_sale_order_cost" name="成本单"
                  parent="sale.sale_order_menu"
                  sequence="20"
                  action="act_open_sale_order_cost_view"/>


    </data>
</odoo>