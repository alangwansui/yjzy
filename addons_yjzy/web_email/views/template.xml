<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="web_email" name="Email">
            <t t-call="web_email.main_layout">
            <t t-call="web_email.header_layout"/>
                <div class="content-wrapper">
                    <div class='content_first'></div>
                    <div class='content_second'></div>
                    
                </div>
            </t>
        </template>

        <template id='sub_search_line'>
            <div class='col-md-2 mt8'>
                <select class='form-control input-sm' name='fields'>
                    <option selected='selected' value='all_field'>All Fields</option>
                    <option value='from'>From</option>
                    <option value='to'>To</option>
                    <option value='cc'>Cc</option>
                    <option value='subject'>Subject</option>
                </select>
            </div>
            <div class='col-md-3 mt8'>
                <input type='text' class='form-control input-sm search_query_require' name='query'/>
            </div>
        </template>

        <template id='search_line2'>
            <div class='row'>
                 <div class='col-md-1 text-center mt8'>
                     <a href='#' class='remove_line'><i class="fa fa-times" aria-hidden="true"></i></a>
                 </div>
                 <t t-call='web_email.sub_search_line'/>
             </div>
        </template>

        <template id='search_line'>
            <div class='row'>
                 <div class='col-md-1 text-center mt8'>
                     <b>Search</b>
                 </div>
                 <t t-call='web_email.sub_search_line'/>
             </div>
        </template>

        <template id='compose_new_mail'>
            <html t-att-data-active_account_id='active_account_id.id'>
                <head>
                    <meta charset="utf-8"/>
                    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
                    <title>Emails</title>
                    <!-- Tell the browser to be responsive to screen width -->
                    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport"/>
                    
                    <!-- Bootstrap 3.3.5 -->
                    <link rel="stylesheet" href="/web_email/static/AdminLTE/bootstrap/css/bootstrap.min.css"/>
                    <!-- Font Awesome -->
                    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"/>
                    <!-- Theme style -->
                    <link rel="stylesheet" href="/web_email/static/AdminLTE/dist/css/AdminLTE.min.css"/>
                    <!-- Select2 -->
                    <link rel="stylesheet" href="/web/static/lib/select2/select2.css"/>
                    <link rel="stylesheet" href="/web/static/lib/select2-bootstrap-css/select2-bootstrap.css"/>
                    <!-- bootstrap wysihtml5 - text editor -->
                    <link rel="stylesheet" href="/web_email/static/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css"/>
                    <!-- Custom css -->
                    <link rel="stylesheet" href="/web_email/static/src/css/custom.css"/>
                    
                </head>
                <body class="hold-transition skin-blue">
                    <!-- jQuery 2.1.4 -->
                    <script src="/web_email/static/AdminLTE/plugins/jQuery/jQuery-2.1.4.min.js"></script>
                    <!-- Bootstrap 3.3.5 -->
                    <script src="/web_email/static/AdminLTE/bootstrap/js/bootstrap.min.js"></script>
                    <!-- Bootstrap WYSIHTML5 -->
                    <script src="/web_email/static/tinymce/tinymce.min.js"></script>
                    <script src="/web_email/static/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
                    <!-- Select2 -->
                    <script src="/web/static/lib/select2/select2.js"></script>
                    <script src="/web_email/static/src/js/circular-progress.js"></script>
                    <!-- AdminLTE App -->
                    <script src="/web_email/static/src/js/compose.js"></script>
                    <div style="background-color: #ecf0f5;">
                        <div class="content_first"></div>
                    </div>
                </body>
            </html>
        </template>

        <template id="compose_mail">
            <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-md-12">
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Compose New Mail</h3>
                </div><!-- /.box-header -->
                <div class="box-footer">
                    <button type="submit" t-att-data-email_id='email_id' t-att-data-folder_name='folder_name' t-att-data-mail_type='mail_type' t-att-data-partner_id='partner_id' class="btn btn-primary send-button btn-sm"><i class="fa fa-envelope-o"></i> Send</button>
                    <button t-if='email_id' class="btn btn-default send-delete-button btn-sm" data-send_delete='true' t-att-data-partner_id='partner_id' t-att-data-mail_type='mail_type' t-att-data-folder_name='folder_name' t-att-data-email_id='email_id' data-toggle="tooltip" title="Send and Delete"><i class="fa fa-times" aria-hidden="true"></i> Send and Delete</button>
                    <div style="width: 300px;display: inline-table;" t-if='email_id'>
                       <!--  <select class="form-control input-sm" name='move_folders_names'>
                            <option selected="selected" value=''>Move to Folder</option>
                            <t t-foreach='folder_names' t-as='label'>
                                <option t-att-value='label'><t t-esc='label'/></option>
                            </t>
                        </select> -->
                        <select class="form-control input-sm" name='move_folders_names'>
                                <option selected="selected" value=''>Move to Folder</option>
                                <!--<t t-foreach='folder_names' t-as='label'>
                                    <option t-att-value='label'><t t-esc='label'/></option>
                                </t>-->
                                <t t-foreach='folder_names' t-as='label'>
                                    <option t-att-value='label[1]'><t t-esc='label[0]'/></option>
                                </t>
                        </select>
                        <span class="input-group-btn">
                            <button class='btn btn-default send-move-button btn-sm' data-send_move='true' t-att-data-partner_id='partner_id' t-att-data-mail_type='mail_type' t-att-data-folder_name='folder_name' t-att-data-email_id='email_id' data-toggle="tooltip" title="Send and Move">Send and Move</button>
                        </span>
                    </div>
                    <button type="button" class="btn btn-default attach-button btn-sm"><i class="fa fa-paperclip"></i> Attach File</button>
                    <!-- <button class="btn btn-default draft-button btn-sm" t-att-data-email_id='email_id'><i class="fa fa-pencil"></i> Draft</button> -->
                    <span class="dropdown">
                        <button class="btn btn-default dropdown-toggle btn-sm" type="button" data-toggle="dropdown">
                        <i class="fa fa-floppy-o" aria-hidden="true"></i> Save as<span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li value=""><a t-att-data-email_id='email_id' class="draft-button" href="#">Draft</a></li>
                            <!-- <li value=""><a t-att-data-email_id='email_id' class="save-template" href="#">Template</a></li> -->
                        </ul>
                    </span>
                    <!-- <button t-if='email_id' class="btn btn-default delete-button" t-att-data-folder_name='folder_name' t-att-data-email_id='email_id' data-toggle="tooltip" title="Delete"><i class="fa fa-times" aria-hidden="true"></i> Delete</button> -->
                </div><!-- /.box-footer -->
                <div class="box-body">
                  <div class="form-group">
                    <input class="form-control" t-att-value='personal_email' name='from' placeholder="From:" readonly="1"/>
                  </div>
                  <div class="form-group">
                    <input class="form-control" t-att-value='reply_to' name='to' placeholder="To:"/>
                  </div>
                  <div class="form-group">
                    <input class="form-control" name='cc' placeholder="Cc:"/>
                  </div>
                  <div class="form-group">
                    <input class="form-control" name='bcc' placeholder="Bcc:"/>
                  </div>
                  <div class="form-group">
                    <input class="form-control" t-att-value='subject' name='subject' placeholder="Subject:"/>
                  </div>
                  <div class="form-group">
                    <!--
                    <div id="compose-textarea" class='form-control' spellcheck="true" autocorrect="true" placeholder='Body' style='height: 300px;overflow-x: auto;' contentEditable="true">
                        <t t-raw='body'/>
                    </div>
                    -->
                    <textarea id="compose-textarea" class="form-control" spellcheck="true" autocorrect="true" placeholder='Body' style='height: 300px;overflow-x: auto;' contentEditable="true">
                        <t t-raw='inline_body'/>
                        <t t-raw='signature'/>
                    </textarea>
                  </div>
                  <div class="col-md-12 mt8">
                    <div class="row">
                        <input type="file" name="attach" class="hidden attach"/>
                        <div class="attach_list"></div>
                    </div>
                  </div>
                </div><!-- /.box-body -->
              </div><!-- /. box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->
        </template>

        <template id='form-view-header'>
            <div class="box-header with-border">
                <div class='row'>
                    <div class='col-xs-12'>
                        <div class="btn-group email_folder_name mt8">
                            <button class="btn btn-default btn-sm reply-to" t-att-data-reply_to='msg_from_email if not folder_name in ["Sent Items","Drafts","Email_Templates"] else msg_to' t-att-data-email_id='email_id' t-att-data-folder_name='folder_name' data-toggle="tooltip" title="Reply"><i class="fa fa-reply"></i> Reply</button>
                            <button class="btn btn-default btn-sm reply-to-all" t-att-data-reply_to='msg_from_email if not folder_name in ["Sent Items","Drafts","Email_Templates"] else msg_to' t-att-data-reply_to_all_emails='reply_to_all_emails' t-att-data-email_id='email_id' t-att-data-folder_name='folder_name' data-toggle="tooltip" title="Reply to all"><i class="fa fa-reply-all" aria-hidden="true"/> Reply to All</button>
                            <button class="btn btn-default btn-sm forward-to" t-att-data-email_id='email_id' t-att-data-folder_name='folder_name' data-toggle="tooltip" title="Forward"><i class="fa fa-share"></i> Forward</button>
                            <button class="btn btn-default btn-sm delete-button" t-att-data-folder_name='folder_name' t-att-data-email_id='email_id' data-toggle="tooltip" title="Delete"><i class="fa fa-times" aria-hidden="true"></i> Delete</button>
                            <button t-if='request.uid == superuser_id' class='btn btn-default btn-sm purge-button' t-att-data-email_id='email_id' t-att-data-folder_name='folder_name' data-toggle="tooltip" title="Purge"><i class="fa fa-trash-o"/> Purge</button>
                            <button class="btn btn-default btn-sm print-button" t-att-data-subject='subject' t-att-data-msg_from='msg_from_email' t-att-data-msg_to='msg_to' t-att-data-folder_name='folder_name' t-att-data-email_id='email_id' data-toggle="tooltip" title="Print"><i class="fa fa-print"></i> Print</button>
                            <button class='btn btn-default btn-sm mark-as-spam' t-att-data-folder_name='folder_name' t-att-data-email_id='email_id' data-toggle="tooltip" title="Spam"><i class="fa fa-shield" aria-hidden="true"/> Spam</button>
