                              <!-- The user image in the navbar-->
                              <t t-if='request.env.user.image_small'>
                                    <img t-attf-src="data:image/gif;base64, #{request.env.user.image_small}" class="user-image" alt="User Image"/>
<!--                                 <img t-att-src="'data:image/gif;base64,'+ request.env.user.image_small" class="user-image" alt="User Image"/> -->
                              </t>
                              <!-- hidden-xs hides the username on small devices so only the image appears. -->
                              <span class="hidden-xs"><t t-esc="active_account_id.email_address"/></span>
                            </a>
                            <ul class="dropdown-menu">
                              <!-- The user image in the menu -->
                              <li class="user-header">
                                <t t-if='request.env.user.image_small'>
                                    <img t-attf-src="data:image/gif;base64,#{request.env.user.image_small}" class="img-circle" alt="User Image"/>
                                </t>
                                <p>
                                  <t t-esc="request.env.user.name"/>
                                  <small>
                                      <t t-esc="request.env.user.email"/>
                                  </small>
                                </p>
                              </li>
                              <!-- Menu Footer-->
                              <li class="user-footer">
                                <div class="pull-left">
                                  <a t-attf-href="/web#id=#{request.env.user.id}&amp;view_type=form&amp;model=res.users" class="btn btn-default btn-flat">Profile</a>
                                </div>
                                 <div class="pull-right">
                                  <a href="/web/session/logout" class="btn btn-default btn-flat">Logout</a>
                                </div>
                              </li>
                              <t t-foreach='account_details' t-as='acct'>
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a t-attf-href="/web_emails?account_id=#{acct.id}" class="btn btn-link"><t t-esc='acct.email_address'/></a>
                                    </div>
                                </li>
                              </t>
                            </ul>
                          </li>
                            <!-- Control Sidebar Toggle Button -->
                            <li>
                                <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!-- Control Sidebar -->
            <t t-call="web_email.control_sidebar"/>
            <!-- Main Sidebar -->
            <t t-call="web_email.main_sidebar"/>
        </template>

        <template id="folders_recursive" name="Folder list">
            <li class='droppable'>
                <t t-if="label['name']!='[Gmail]' and label['name']!='INBOX' and not a==1">
                    <span><i t-if="label['children']" aria-hidden="true"/></span>
                    <span class="dropdown">
                        <a id="dLabel" class="foldr_manage" style="float:right;padding-right:10px;" t-att-data-folder_name="label['path']" role="button" data-toggle="dropdown" data-target="#">
                            <span class="caret"></span>
                        </a>
                        <span class="dropdown-menu"  role="menu" style="min-width:70px;left:120px;border:2px solid #3c8dbc;" aria-labelledby="dropdownMenu">
                          <a data-toggle="modal" t-att-data-folder_name="label['path']" data-target=".rename-folder-modal-sm" href="#" class="rename-folder">Rename</a><br/>
                          <a data-toggle="modal" t-att-data-folder_name="label['path']" data-target=".delete-folder-modal-sm" href="#" class="delete-folder">Delete</a>
                        </span>
                    </span>
                </t>
                <div class="truncate">
                    <span><i t-if="label['children']" class="fa fa-minus-square-o" aria-hidden="true"/></span>
                    <a class="folder_name" t-att-data-folder_name="label['path']" href="#" t-if="label['name'] != '[Gmail]'">
                        <i class="fa fa-folder" aria-hidden="true"/>
                        <t t-esc="label['name']"/>
                    </a>
                    <t t-esc="label['name']" t-if="label['name'] == '[Gmail]'"/>
                </div>
                <ul t-if="label['children']">
                    <t t-if="label['name']=='[Gmail]'" >
                        <t t-set="a" t-value="1"/>
                    </t>
                    <t t-foreach="label['children']" t-as="label">
                        <t t-call="web_email.folders_recursive"/>
                    </t>
                </ul>
            </li>
            
        </template>

        <template id="main_sidebar" name="email Main Sisebar">
            <!-- Left side column. contains the logo and sidebar -->
                  <aside class="main-sidebar">

                    <!-- sidebar: style can be found in sidebar.less -->
                    <section class="sidebar">
                        <form action="#" method="post" class="sidebar-form">
                            <div class="input-group">
                                <input type="text" name="search" class="form-control txt_search" placeholder="Search..."/>
                                <span class="input-group-btn">
                                    <button name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"/></button>
                                </span>
                            </div>
                        </form>
                        <div class="row" style='margin: 10px 0px;'>
                            <div class="col-md-4">
                                <button class="btn btn-primary btn-block advance_search_sidebar_button" data-toggle="modal" data-target=".advance-search-lg-modal"><i class="fa fa-filter" aria-hidden="true"></i></button>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-primary btn-block new-compose-mail" ><i class="fa fa-envelope-o" aria-hidden="true"></i></button>
                            </div>
                            <div class="col-md-4">
                                <button data-toggle="modal" data-target=".bs-example-modal-sm" class="btn btn-primary btn-block create-new-folder"><i class="fa fa-folder" aria-hidden="true"></i></button>
                            </div>
                        </div>
                      <!-- Sidebar Menu -->
                      <ul class="sidebar-menu">
                        <li class="treeview test active">
                            <a>
                              <i class="fa fa-envelope"></i> <span>Mailbox</span>
                              <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu folders" style="padding-top: 5px;">
                            <div class="tree">
                                <ul>
                                    <t t-foreach='folders' t-as='label'>
                                        <t t-if="str(label['display_top']) == 'True'">
                                            <t t-call="web_email.folders_recursive"/>
                                        </t>
                                    </t>
                                </ul>
                                <hr style="border-top: 1px dotted #b8c7ce;"/>
                                <ul>
                                    <t t-foreach='folders' t-as='label'>
                                        <t t-if="str(label['display_top']) != 'True'">
                                            <t t-call="web_email.folders_recursive"/>
                                        </t>
                                    </t>
                                </ul>
                            </div>
                            </ul>
                        </li>
                        <li></li>
                        <li class="treeview">
                            <a>
                              <i class="fa fa-book" aria-hidden="true"></i> <span>Address Book</span>
                              <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li>
                                    <a class='add_contact' data-toggle="modal" data-target=".add-new-contact-modal-sm" href="#">
                                        Add Quick Contact
                                    </a>
                                </li>
                                <li>
                                    <a class='contacts' href="#">
                                        Contacts
                                    </a>
                                </li>
                            </ul>
                        </li>
                      </ul><!-- /.sidebar-menu -->
                    </section>
                    <!-- /.sidebar -->
                  </aside>
        </template>

        <template id="assets_backend_personal_emails" name="account assets personal emails " inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/web_email/static/src/js/email_assets.js"></script>
            </xpath>
        </template>

    </data>
