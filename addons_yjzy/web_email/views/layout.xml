                                                            <select class='form-control input-sm' name='flagged'>
                                                                <option selected='selected' value='dont_care'>Don't Care</option>
                                                                <option value='yes'>Yes</option>
                                                                <option value='no'>No</option>
                                                            </select>
                                                        </div>
