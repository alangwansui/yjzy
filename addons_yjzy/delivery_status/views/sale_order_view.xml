<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ............... HERENCIA VISTA EN TREE ...............-->
    <record model="ir.ui.view" id="sale_order_delivery">
        <field name="name">sale.order.delivery.mhf</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="delivery_status"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_order_delivery_2">
        <field name="name">sale.order.delivery.mhf.2</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="delivery_status"/>
            </field>
        </field>
    </record>
</odoo>
