<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="user_menu_tree" model="ir.ui.view">
        <field name="name">user_menu.tree</field>
        <field name="model">user.menu</field>
        <field name="arch" type="xml">
            <tree string="用户看板菜单定义">
                <field name="user_id"/>
                <field name="menu_id"/>
            </tree>
        </field>
    </record>
    <record id="user_menu_form" model="ir.ui.view">
        <field name="name">user_menu.form</field>
        <field name="model">user.menu</field>
        <field name="arch" type="xml">
            <form string="用户看板菜单定义">
                <field name="user_id"/>
                <field name="menu_id"/>
            </form>
        </field>
    </record>
    <record id="user_menu_kanban" model="ir.ui.view">
        <field name="name">user_menu.kanban</field>
        <field name="model">user.menu</field>
        <field name="arch" type="xml">
            <kanban> string="用户看板菜单定义">
                <field name="user_id"/>
                <field name="menu_id"/>
                <field name="name"/>
                <field name="len_records"/>
                <templates>
                    <t t-name="kanban-box">
                                    <div class="container o_kanban_card_content">
                                        <div class="row">
                                            <div class="col-xs-6 o_kanban_primary_left">
                                                <button class="btn btn-primary" name="open_menu" type="object">
                                                    <t t-esc="record.menu_id.value"/>
                                                    <span><t t-esc="record.len_records.value"/></span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                        <button name="open_menu" type="object" class="btn btn-primary">
                            <span>
                                <strong>
                                <t t-esc="record.menu_id.name.value"/>
                                <field name="name"/>
                                </strong>
                            </span>
                        </button>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_user_menu" model="ir.actions.act_window">
        <field name="name">用户看板菜单定义</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">user.menu</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_user_menu" name="用户看板菜单定义"  action="action_user_menu" sequence="0"/>


</odoo>
